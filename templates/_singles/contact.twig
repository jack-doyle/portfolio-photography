{% extends '_layout' %}

{% set profileImage = entry.image.one() %}

{% block content %}
  <section aria-labelledby="contact-title" class="space-y-6">
    <h1 id="contact-title" class="page-title">{{ entry.title }}</h1>

    <div class="grid gap-6 md:grid-cols-[240px,1fr] md:items-start">
      {% if profileImage %}
        {% set altText = profileImage.alt ?? entry.title ~ ' portrait' %}
        <figure class="overflow-hidden rounded-lg border border-slate-200/80 shadow-sm">
          <img class="h-full w-full object-cover" src="{{ profileImage.url }}" alt="{{ altText }}" loading="lazy">
        </figure>
      {% endif %}

      <div class="prose max-w-none">
        {{ entry.bio | md }}
      </div>
    </div>
  </section>
{% endblock %}
