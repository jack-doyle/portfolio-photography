<!DOCTYPE html>
<html lang="{{ craft.app.language }}">
  <head>
    <meta charset="utf-8"/>
    <title>{{ siteName }}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    {% do craft.app.view.registerCssFile('@web/styles.css') %}
  </head>
  <body class="bg-slate-100 text-slate-900">
    {% set currentSegment = craft.app.request.getSegment(1) %}

    <header class="border-b border-slate-200/60">
      <div class="site-shell flex flex-col gap-4 py-6 sm:flex-row sm:items-center sm:justify-between">
        <a class="pl-8 text-brand text-xl font-bold tracking-tight focus-visible:outline-none focus-visible:ring focus-visible:ring-brand/50" href="{{ siteUrl }}">
          {{ siteName }}
        </a>
        <nav aria-label="Primary">
          <ul class="primary-nav" role="list">
            <li>
              <a class="nav-link" href="{{ url('/') }}" aria-current="{{ currentSegment is null ? 'page' : null }}">Portfolio</a>
            </li>
            <li>
              <a class="nav-link" href="{{ url('concerts') }}" aria-current="{{ currentSegment == 'concerts' ? 'page' : null }}">Concerts</a>
            </li>
            <li>
              <a class="nav-link" href="{{ url('events') }}" aria-current="{{ currentSegment == 'events' ? 'page' : null }}">Events</a>
            </li>
            <li>
              <a class="nav-link" href="{{ url('world') }}" aria-current="{{ currentSegment == 'world' ? 'page' : null }}">World</a>
            </li>
            <li>
              <a class="nav-link" href="{{ url('people') }}" aria-current="{{ currentSegment == 'people' ? 'page' : null }}">People</a>
            </li>
            <li>
              <a class="nav-link" href="{{ url('contact') }}" aria-current="{{ currentSegment == 'contact' ? 'page' : null }}">Contact</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="main-content site-shell" tabindex="-1">
      {% block content %}
      {% endblock %}
    </main>
  </body>
</html>
